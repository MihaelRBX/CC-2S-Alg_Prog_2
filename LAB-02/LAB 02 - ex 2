#include <stdio.h>

int main() {
  float peso, altura;
  printf("Informe o peso em Kg: ");
  scanf("%f", &peso);
  printf("Informe a altura em metros: ");
  scanf("%f", &altura);

  float imc = peso / (altura * altura);

  printf("O IMC de uma pessoa com peso %.2f kg e altura %.2f m Ã© igual a %.2f.\n", peso, altura, imc);

  return 0;
  
}
